{
  "name": "insult-function",
  "version": "1.0.0",
  "description": "A port of the famous node-insult insult generator service to Azure Functions",
  "repository": {
    "type": "git",
    "url": "https://github.com/shladdergoo/insult-function"
  },
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist",
    "format": "prettier --write \"{src,__tests__}/**/*.ts\" --single-quote --trailing-comma es5",
    "lint": "tslint --force --format verbose \"src/**/*.ts\"",
    "prepublishOnly": "npm run build",
    "prebuild": "npm run clean && npm run format && npm run lint && echo Using TypeScript && tsc --version",
    "build": "tsc --pretty",
    "postbuild": "copyfiles -u 1 src/**/function.json src/**/data.json dist/src && copyfiles host.json local.settings.json dist/src",
    "pretest": "npm run build",
    "test": "mocha dist/__tests__/**/*-spec.js --reporter mocha-multi-reporters --reporter-options configFile=__tests__/reporter-config.json",
    "test-ci": "mocha dist/__tests__/**/*-spec.js --reporter mocha-multi-reporters --reporter-options configFile=__tests__/reporter-config.json"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.12",
    "@types/shuffle-array": "0.0.28",
    "@types/sinon": "^5.0.7",
    "chai": "^4.2.0",
    "copyfiles": "^2.1.0",
    "mocha": "^5.2.0",
    "mocha-junit-reporter": "^1.18.0",
    "mocha-multi-reporters": "^1.1.7",
    "mocha-sinon": "^2.1.0",
    "prettier": "^1.15.3",
    "rimraf": "^2.6.2",
    "sinon": "^7.2.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^3.2.2"
  },
  "dependencies": {
    "inversify": "^5.0.1",
    "reflect-metadata": "^0.1.12",
    "shuffle-array": "^1.0.1"
  }
}
